@model OrdersManagement.Models.ProductViewModel

@{ ViewData["Title"] = "Product List"; }

<h1>Product List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Product" asp-action="Index" method="get">
    <p>
        <select asp-for="ProductDescription" asp-items="Model.Descriptions">
            <option value="">All</option>
        </select>
        Name: <input type="text" name="productName">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].ExpiredDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreationDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExpiredDate)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
